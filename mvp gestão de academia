<script>
function showTab(i){
  document.querySelectorAll('.tab').forEach((t,x)=>t.classList.toggle('active',x===i));
  document.querySelectorAll('.painel').forEach((p,x)=>p.classList.toggle('active',x===i));
}

let alunos = [];
let indiceEdicao = null;

function toggleForm(){
  formAluno.style.display = formAluno.style.display === 'block' ? 'none' : 'block';
}

function salvarAluno(){
  const aluno = {
    nome:nome.value,
    telefone:telefone.value,
    celular:celular.value,
    endereco:endereco.value,
    faixa:faixa.value,
    inicio:inicio.value,
    vencimento:vencimento.value
  };

  if(indiceEdicao === null){
    alunos.push(aluno);
  }else{
    alunos[indiceEdicao] = aluno;
    indiceEdicao = null;
  }

  ordenarAlunos();
  renderAlunos();
  atualizarPerfil(aluno);
  formAluno.style.display = 'none';
}

function ordenarAlunos(){
  alunos.sort((a,b)=>a.nome.localeCompare(b.nome));
}

function atualizarPerfil(a){
  perfilInfo.innerHTML = `
    <p><strong>Nome:</strong> ${a.nome}</p>
    <p><strong>Faixa:</strong> ${a.faixa}</p>
    <p><strong>In√≠cio:</strong> ${a.inicio || '-'}</p>
  `;
}

function editarAluno(i){
  const a = alunos[i];
  indiceEdicao = i;

  nome.value = a.nome;
  telefone.value = a.telefone;
  celular.value = a.celular;
  endereco.value = a.endereco;
  faixa.value = a.faixa;
  inicio.value = a.inicio;
  vencimento.value = a.vencimento;

  atualizarPerfil(a);
  formAluno.style.display = 'block';
}

function renderAlunos(){
  listaAlunos.innerHTML = '';
  alunos.forEach((a,i)=>{
    const div = document.createElement('div');
    div.className = 'aluno-card';
    div.onclick = ()=>atualizarPerfil(a);

    div.innerHTML = `
      <div>
        <strong>${a.nome}</strong><br>
        <span>In√≠cio: ${a.inicio || '-'}</span> |
        <span>Vencimento: dia ${a.vencimento || '-'}</span>
      </div>
      <span class="editar" onclick="event.stopPropagation(); editarAluno(${i})">üõ†</span>
    `;

    listaAlunos.appendChild(div);
  });
}
</script>

